### Aliases

# Fancier ls
if [ -x "$(command -v exa)" ]; then
	alias ls='exa --colour=auto --grid'
	alias la='exa --colour=auto --long --group --header --time-style=long-iso --all --all'
else
	alias ls='ls --color=auto'
	alias la='ls --color=auto -lha'
fi

# Colorful grep
alias grep='grep --color=auto'
