#!/bin/sh

export PATH="${HOME}/.local/bin:${HOME}/.cargo/bin:${PATH}"
export TMPDIR=${TMPDIR:-/tmp}

# Check for available editor
lvim_cmd="$(command -v lvim)"
vim_cmd="$(command -v vim)"

if [ -x "${lvim_cmd}" ]; then
	# LunarVim
	export EDITOR="${lvim_cmd}"
	export VISUAL="${lvim_cmd}"
elif [ -x "${vim_cmd}" ]; then
	export EDITOR="${vim_cmd}"
	export VISUAL="${vim_cmd}"
fi

# Check for avaliable manpager
if [ -x "${vim_cmd}" ]; then
	export MANPAGER="${vim_cmd} +MANPAGER -c 'setlocal ts=8 ft=man nomod nolist nonu' -c 'nmap q :q!' -"
fi

# Install new npm packages globally *for the user* so it won't need `sudo'
export NPM_CONFIG_PREFIX="${HOME}/.local"

# snippet generated by 'conda init'
__conda_setup=$("${HOME}/anaconda3/bin/conda" 'shell.bash' 'hook' 2> /dev/null)
# shellcheck disable=2181
if [ $? -eq 0 ]; then
	eval "$__conda_setup"
else
	if [ -f "${HOME}/anaconda3/etc/profile.d/conda.sh" ]; then
		. "${HOME}/anaconda3/etc/profile.d/conda.sh"
	else
		export PATH="${HOME}/anaconda3/bin:$PATH"
	fi
fi
unset __conda_setup
